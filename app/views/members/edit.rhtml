<h1>Editing member</h1>

<%= error_messages_for :member %>

<% form_for(:member, :url => member_path(@member), :html => { :method => :put }) do |f| %>
  <p>
    <b>Email</b><br />
    <%= f.text_field :email %>
  </p>

  <p>
    <%= submit_tag "Update" %>
  </p>
<% end %>

<%= link_to 'Show', member_path(@member) %> |
<%= link_to 'List', members_path %>